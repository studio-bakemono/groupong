{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build game",
            "type": "shell",
            "linux": {
                "command": "cp -r ../assets . && cmake .. && make",
                "options": {
                    "cwd": "${workspaceFolder}/build"
                }
            },
            "windows": {
                "command": "cmd /c ${workspaceFolder}\\.vscode\\build.bat",
                "options": {
                    "cwd": "${workspaceFolder}/build"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}